<deskband:CSDeskBandWpf x:Class="DiceDeskBand.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiceDeskBand"
             xmlns:deskband="clr-namespace:CSDeskBand.Wpf;assembly=CSDeskBand.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Foreground="White">
    <Grid>
        <GroupBox Header="Dice" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="243" FontSize="16">
            <Button Content="Button" HorizontalAlignment="Left" Margin="158,22,-2,0" VerticalAlignment="Top" Width="75" Click="Roll"/>
        </GroupBox>
        <GroupBox Header="GroupBox" HorizontalAlignment="Left" Height="100" Margin="248,0,0,0" VerticalAlignment="Top" Width="100" FontSize="14">
            <Label Content="{Binding LastResult}" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Foreground="White"/>
        </GroupBox>

    </Grid>
</deskband:CSDeskBandWpf>
